extends ../layout.pug

block content
  main.page-content
    section.login
      form.login__form.form(action='/login' method='post')
        .login__title
          a.login__link(href='/sign-up') Регистрация
          h2 Вход
        .form__field.login__field
          input(type="hidden" name="_csrf" value=csrfToken)
          input#user-email.js-field(type='email' name='email' required='')
          label(for='email') Эл. почта
          span Обязательное поле
        .form__field.login__field
          input#user-password.js-field(type='password' name='password' required='')
          label(for='password') Пароль
          span Обязательное поле
        +showMessages(errorsList)
        button.login__button.btn.btn--medium.js-button(type='submit' disabled='') Войти
